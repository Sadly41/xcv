<Window x:Class="WpfApp5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp5"
        mc:Ignorable="d"
        Title="MainWindow" Height="318" Width="300">
    <Grid>
        <StackPanel Margin="40,0">
            <Label Content="Авторизация" FontSize="18"  HorizontalAlignment="Center"/>
            <Label Content="Логин" FontSize="16" HorizontalAlignment="Center"/>
            <TextBox x:Name="txtlogin" Background="Black" Foreground="White" FontSize="15"/>
            <Label Content="Пароль" FontSize="16" HorizontalAlignment="Center"/>
            <PasswordBox Name="txtpassword" Background="Black" Foreground="White" FontSize="15"/>
            <Button x:Name="button_avtoriza" Content="Вход" FontSize="20" HorizontalAlignment="Center" Margin="47,30" Width="118" Click="button_avtoriza_Click"/>
            <Button Name="button_registashin" Content="Регистрация" FontSize="20" HorizontalAlignment="Center" Width="118" Click="button_registashin_Click"/>
        </StackPanel>
    </Grid>
</Window>
